@model List<CrudSurya1.Models.RegForm>

<table class="table">
    <tr>
        <th>id</th>
        <th>name</th>
        <th>email</th>
        <th>mobile</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>

            <td>@item.id</td>
            <td>@item.name</td>
            <td>@item.email</td>
            <td>@item.mobile</td>
            <td>
                <a href="@Url.Action("Edit","Home", new { item.id})" class="btn btn-warning">Edit</a>
            </td>
            <td>
                <a href="@Url.Action("Delete","Home",new { item.id})" class="btn btn-danger">Delete</a>
            </td>
        </tr>

    }
</table>