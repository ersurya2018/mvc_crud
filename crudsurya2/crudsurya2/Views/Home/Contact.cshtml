@model crudsurya2.Models.Suryamodel

<style>
    .error{
        color:red;
    }
</style>
@using (Html.BeginForm("Contact", "Home", FormMethod.Post))
{
<div class="form-group">
    <label>Email/UserId</label>
    @Html.TextBoxFor(m => m.email, new { @class = "form-control", @required = "required", @placeholder = "Enter Email/Userid.." })
<div class="error">@TempData["invalid"]</div>
</div>
<div class="form-group">
    <label>Password</label>
    @Html.PasswordFor(m => m.password, new { @class = "form-control", @required = "required", @placeholder = "Enter Passwrod.." })
<div class="error"> @TempData["invalidpass"]</div>
</div>
    
    <button type="submit" class="btn btn-success">Login</button>
}